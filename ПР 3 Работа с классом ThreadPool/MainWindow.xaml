<Window x:Class="ЛР_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ЛР_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="479" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Просмотр погоды" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="39" FontSize="20"/>
        <ScrollViewer Margin="10,70,10,70" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="wrapPanelWeather" Height="Auto" Width="Auto"/>
        </ScrollViewer>
        <Label x:Name="LabelLoad" Content="Загрузка" HorizontalAlignment="Center" Margin="0,205,0,0" VerticalAlignment="Top" Height="39" FontSize="20"/>
        <Button x:Name="buttonMinus" Content="Прошлые 25" HorizontalAlignment="Left" Margin="10,408,0,0" VerticalAlignment="Top" Height="45" Width="100" Click="buttonMinus_Click"/>
        <Button x:Name="buttonPlus" Content="Следующие 25" HorizontalAlignment="Right" Margin="0,408,10,0" VerticalAlignment="Top" Height="45" Width="100" Click="buttonPlus_Click"/>


    </Grid>
</Window>
